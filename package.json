{
  "name": "react-mocha-workshop",
  "private": true,
  "version": "1.0.0",
  "description": "üêØ A workshop repository for testing React ‚öõ with Mocha ‚òï",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test nyc mocha app/**/*.test.js",
    "test:final": "cross-env NODE_ENV=test nyc mocha app/**/*.test-final.js",
    "watch:test": "mocha --watch --compilers js:babel-register app/**/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kentcdodds/react-mocha-workshop.git"
  },
  "keywords": [],
  "author": "Kent C. Dodds <kent@doddsfamily.us> (http://kentcdodds.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kentcdodds/react-mocha-workshop/issues"
  },
  "homepage": "https://github.com/kentcdodds/react-mocha-workshop#readme",
  "dependencies": {
    "react": "15.3.0",
    "react-dom": "15.3.0"
  },
  "devDependencies": {
    "babel-core": "6.13.2",
    "babel-plugin-istanbul": "1.0.3",
    "babel-polyfill": "6.13.0",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-2": "6.13.0",
    "babel-register": "6.11.6",
    "chai": "3.5.0",
    "chai-enzyme": "0.5.0",
    "cross-env": "2.0.0",
    "enzyme": "2.4.1",
    "eslint": "3.2.2",
    "eslint-config-kentcdodds": "9.0.3",
    "jsdom": "9.4.2",
    "mocha": "3.0.2",
    "nyc": "7.1.0",
    "sinon": "1.17.5",
    "sinon-chai": "2.8.0"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "branches": 100,
    "function": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "app"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/*.test.*",
      "**/*.test-final.*",
      "**/*.stub.*",
      "**/*.stub-final.*",
      "**/helpers/**",
      "**/test/**"
    ],
    "sourceMap": false,
    "instrument": false,
    "require": [
      "babel-register"
    ]
  }
}
